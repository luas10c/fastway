{
  "name": "glowlify",
  "version": "0.0.0",
  "exports": {
    ".": {
      "default": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "default": {
        "import": "./dist/middleware.js",
        "types": "./dist/middleware.d.ts"
      },
      "import": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json --outDir dist",
    "postbuild": "tsc-alias -f -p tsconfig.build.json --outDir dist && tsc -p tsconfig.build.json --emitDeclarationOnly --declaration --outDir dist",
    "lint": "eslint . --concurrency auto",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests --ci",
    "test:watch": "jest --passWithNoTests --watch",
    "test:watchAll": "jest --passWithNoTests --watchAll",
    "test:coverage": "jest --passWithNoTests --coverage",
    "benchmark": "k6 run tools/benchmark.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@jest/globals": "^30.1.2",
    "@swc-node/register": "^1.11.1",
    "@swc/jest": "^0.2.39",
    "@types/node": "^24.5.2",
    "eslint": "^9.35.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "license": "MIT"
}
